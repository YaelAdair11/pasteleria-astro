---
import '../styles/login.css'; // Mismo estilo

const error = Astro.url.searchParams.get('error');
---
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale-1.0" />
  <title>Staff - Iniciar Sesi칩n</title>
</head>
<body>
  <div class="login-container">
    <h1>Acceso Staff</h1>
    <h2>Iniciar Sesi칩n</h2>

    {/* Apunta a la nueva API de staff */}
    <form method="POST" action="/api/auth/staff-login"> 
      <div class="input-group">
        <label for="username">Usuario</label> {/* Pide Username */}
        <input type="text" id="username" name="username" placeholder="Ingresa tu usuario" required />
      </div>

      <div class="input-group">
        <label for="password">Contrase침a</label>
        <input type="password" id="password" name="password" placeholder="Ingresa tu contrase침a" required />
